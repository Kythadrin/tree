{% extends 'layout/base.html.twig' %}

{% block content %}
    <h1>Sections Tree</h1>
    <ul id="sections-list">
        {% for section in sections %}
            {% if section.parent is null %}
                {% include 'components/_section.html.twig' with {'section': section} %}
            {% endif %}
        {% endfor %}
    </ul>
    <div class="button-wrapper">
        <button class="primary" data-action="add-parent">Create section</button>
        <button class="secondary" data-action="logout">Log out</button>
    </div>
{% endblock %}

{% block script %}
    <script type="module" crossorigin="anonymous">
        {{ vite_js('sections') }}
    </script>
{% endblock %}